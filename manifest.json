{
    "manifest_version": 3,
    "name": "Azure Favicons",
    "version": "1.0.0",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "description": "Sets favicons to match the azure service you're working with on a given tab",
    "action": {
        "default_icon": "icon.png",
        "default_title": "Azure Favicons",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://portal.azure.com/*"],
            "js": ["contentScript.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "scripting", "alarms"],
    "host_permissions": ["https://portal.azure.com/*"]
}
